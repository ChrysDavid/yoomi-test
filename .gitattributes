yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf
.nvmrc text eol=lf
.node-version text eol=lf

# Configuration NestJS/ESLint/Prettier
nest-cli.json text eol=lf
.eslintrc* text eol=lf
.prettierrc* text eol=lf
eslint.config.* text eol=lf
jest.config.* text eol=lf
tsconfig*.json text eol=lf

# Prisma
*.prisma text eol=lf
prisma/schema.prisma text eol=lf
prisma/seed.* text eol=lf

# =============================================================================
# FRONTEND (Flutter/Dart)
# =============================================================================

# Dart
*.dart text eol=lf

# Flutter configuration
pubspec.yaml text eol=lf
