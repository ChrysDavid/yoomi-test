analysis_options.yaml text eol=lf

# Flutter assets
*.arb text eol=lf

# =============================================================================
# SCRIPTS ET SHELL
# =============================================================================

# Scripts Unix (toujours LF)
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Scripts Windows (toujours CRLF)
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Makefiles (toujours LF avec tabs)
Makefile text eol=lf
*.mk text eol=lf

